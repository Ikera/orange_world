<div class="row">
  <div class="col-md-3">

  <%= form_for @character, :html => {:multipart => true}, remote: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :avatar %><br>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
    </div>  
  <% end %>
  </div>
</div>   

  