<h2>Character List</h2>

<table class="table">
  <thead>
    <tr>
      <th><h3>Current characters</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><strong><h3><%= character.name %></h3></strong></td>
        <td><%= link_to(image_tag character.avatar.url(:thumb) ) if character.avatar? %></td>      
        <td>
          <%= link_to 'Show', character, class: "btn btn-sm btn-default" %>
          <%= link_to 'Edit', edit_character_path(character), class: "btn btn-sm btn-default" %>
          <%= link_to 'Destroy', character, remote: true, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
