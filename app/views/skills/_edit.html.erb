<h3>Edit your skill</h3>

<%= form_for ([@character, @skill]), remote: true, :html => {:mulitipart => true} do |f| %>

	<div class="form-group">
	  <%= f.label :name %><br />
	  <%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
	  <%= f.label :value %><br />
	  <%= f.number_field :value, min: 10, max: 100, step: 10, class: "form-control" %>
	</div>
	<div class="form-group">
	  <%= f.label :icon %><br />
	  <%= f.file_field :icon %>
	</div>

	<div class="form-group">
	  <%= f.submit "Submit", class: "btn btn-sm btn-primary" %>
	</div>

  
<% end %>