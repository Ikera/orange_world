<% if @skill.errors.any? %>
    alert("All your fields must be filled! Please try again.")
<% else %>
	$('#skills').html("<%= j render @character.skills %>");
	$('#skill_count').html("You have <%= pluralize(@character.skills.size, "skill")%>")
	$('#skill_name').val("");
	$('#skill_value').val("");
<% end %>